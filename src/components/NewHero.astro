<section class="hero">
  <img src="/assets/images/hero-niki-tree.jpg" alt="Hero image" class="hero__image" loading="lazy" />
  <div class="hero__overlay"></div>
  <h1 class="hero__text">
    Focus.<br />
    Invest.<br />
    Develop.<br />
    You.
  </h1>
</section>

<style>
  .hero {
    position: relative;
    height: calc(100svh - 95px);
    overflow: hidden;
    display: flex;
    align-items: flex-end;
    justify-content: flex-start;
    color: white;
    padding-block-end: 1rem;
    padding-inline-start: 1rem;
  }

  .hero__image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: bottom;
    z-index: 0;
  }

  .hero__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.2);
    z-index: 1;
  }

  .hero__text {
    position: relative;
    z-index: 2;
    font-size: 3rem;
    font-weight: bold;
    line-height: 1;
    letter-spacing: -0.05em;
    margin: 0;
  }

  @media (min-width: 768px) {
    .hero__text {
      font-size: 5rem;
    }
  }
</style>
